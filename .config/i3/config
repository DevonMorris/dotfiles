# window colors
#                       border              background         text                 indicator
client.focused          $border             $bg-color          $text-color          $indicator
client.unfocused        $inactive-bg-color $inactive-bg-color  $text-color          $border
client.focused_inactive $inactive-bg-color $inactive-bg-color  $text-color          $border
client.urgent $urgent-bg-color $urgent-bg-color $text-color #F92672

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    status_command i3status
    tray_output primary
    tray_padding 0
    separator_symbol "|"
    colors {
      background $inactive-bg-color
      separator #757575
      statusline $text-color
      #                  border             background         text
      focused_workspace  $bg-color          $bg-color          $text-color
      inactive_workspace $inactive-bg-color $inactive-bg-color $text-color
      urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
    }
}

# start rofi (as a program launcher)
bindsym $mod+d exec "rofi -show run -modi run -location 1 -width 100 -lines 2 -line-margin 0 -line-padding 1 -separator-style none -font 'DejaVu Sans Mono 8' -columns 9 -bw 0 -hide-scrollbar -matching fuzzy -color-window '$inactive-bg-color' -color-normal '$inactive-bg-color, $text-color, $inactive-bg-color, $bg-color, $inactive-bg-color' -kb-row-select 'Tab' -kb-row-tab ''"
bindsym $mod+Tab exec "rofi -show window -modi window -location 0 monitor -2 -width 30 -lines 10 -line-margin 0 -line-padding 1 -separator-style none -font 'DejaVu Sans Mono 10' -columns 1 -bw 0 -hide-scrollbar -matching fuzzy -color-window '$inactive-bg-color' -color-normal '$inactive-bg-color, $text-color, $inactive-bg-color, $bg-color, $inactive-bg-color' -color-window '$inactive-bg-color' -color-active '$inactive-bg-color, $text-color, $inactive-bg-color, $bg-color, $inactive-bg-color' -kb-row-tab 'Tab'"
