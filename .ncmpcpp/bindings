def_key "+"
    show_clock
def_key "="
    volume_up
def_key "-"
    volume_down

def_key "j"
    scroll_down
def_key "k"
    scroll_up

def_key "space"
    pause

def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down

def_key "G"
  move_end
def_key "g"
  move_home

def_key "h"
    previous
def_key "l"
    next

def_key "."
    show_lyrics

def_key "n"
    next_found_item
def_key "N"
    previous_found_item

def_key "v"
  select_item

def_key "J"
    move_sort_order_down
def_key "K"
    move_sort_order_up

def_key "d"
  delete_playlist_items
